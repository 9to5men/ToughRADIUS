<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.toughradius.mapper.OptionMapper">

  <resultMap id="OptionMap" type="com.ts.radiusd.entity.TcConfig">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="value" jdbcType="VARCHAR" property="value" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>

  <cache type="org.mybatis.caches.ehcache.EhcacheCache" readOnly="true"  >
    <property name="maxElementsInMemory" value="10000"/>
    <property name="eternal" value="false"/>
    <property name="timeToIdleSeconds" value="60"/>
    <property name="timeToLiveSeconds" value="60"/>
    <property name="memoryStoreEvictionPolicy" value="LRU"/>
    <property name="logging" value="true"/>
    <property name="overflowToDisk" value="false"/>
    <property name="diskPersistent" value="false"/>
  </cache>

  <select id="findOption" parameterType="java.lang.String" resultMap="OptionMap" useCache="true">
    select id, name, value, update_time from tr_option where name = #{name}
  </select>

  <select id="getStringValue" parameterType="java.lang.String" resultType="java.lang.String" useCache="true">
    select value from tr_option where name = #{name}
  </select>

  <select id="getIntegerValue" parameterType="java.lang.String" resultType="java.lang.String" useCache="true">
    select value from tr_option where name = #{name}
  </select>




</mapper>